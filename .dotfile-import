#!/bin/sh
# vim: set ft=sh
# sh < <( curl https://github.com/shiwano/dotfiles/raw/master/.dotfile-import )

TGZURL=https://github.com/shiwano/dotfiles/tarball/master
TEMPDIR=`mktemp -d /tmp/import-vim.XXXXXXXXX`

INSTALLDIR=~

cd $TEMPDIR
curl -L $TGZURL | tar xvfz - 

cd shiwano-dotfiles-*

# generic
for dotfile in .git* .screenrc .zsh*; do
  if [ ! -f ~/$dotfile ]; then
    echo installing $dotfile
    cp -Rp $dotfile ~/
  fi
done

# vim
if [ ! -e ~/.vim ]; then
  echo installing .vim, .vimrc .gvimrc
  cp -Rp .vim .vimrc .gvimrc ~/

  echo installing vundle
  git clone http://github.com/gmarik/vundle.git ~/.vim/bundle/vundle

  echo vim Bundle Install
  vim -c BundleInstall -c quit
fi

rm -rf $TEMPDIR

